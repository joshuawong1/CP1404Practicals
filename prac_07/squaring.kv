BoxLayout:
    orientation: 'vertical'
    TextInput:
        id: input_number
        text: '7'
        font_size: 48
        multiline: False
    Button:
        text: 'Square'
        on_press: app.handle_calculate(float(input_number.text))
    Label:
        text: 'Enter a number and press "square"'
        id: output_label
        font_size: 36
        color: (1, 0.5, 0.5, 1)
